---
import config from "../about.config"

import BaseLayout from '../layouts/BaseLayout.astro'
import BaseMain from "../layouts/BaseMain.astro"
import Accordion from "../components/Accordion.astro"
import LanguageCard from "../components/LanguageCard.astro"
import SkillGroup from '../components/SkillGroup.astro'
import BannerGeomatics from "../icons/BannerGeomatics.astro"
import BannerHumanitarian from "../icons/BannerHumanitarian.astro"
import BannerInnovation from "../icons/BannerInnovation.astro"
---

<BaseLayout title="About | Quentin Poterek" activeNavItem="/about">
	<BaseMain>
		<section class="flex flex-col gap-y-12">
			<h2 class="text-2xl font-bold">üë§ Profil</h2>
			<div class="grid grid-cols-6 gap-y-12 gap-x-8">
				{
					config.profile.map((item, i) => (
						<article class="col-span-6 md:col-span-2 flex flex-col items-center gap-y-12">
							{(i === 0) && <BannerGeomatics />}
							{(i === 1) && <BannerInnovation />}
							{(i === 2) && <BannerHumanitarian />}
							<div>
								<h3 class="text-lg font-semibold mb-8">{item.title}</h3>
								<p>{item.content}</p>
							</div>
						</article>
					))
				}
			</div>
		</section>

		<section class="flex flex-col gap-y-12">
