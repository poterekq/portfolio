					config.experiences.map(item => (
						<div class="flex flex-col sm:flex-row gap-4 first:pt-4 pb-4 border-b first:border-y border-neutral-900/10 dark:border-neutral-100/10 text-neutral-700 dark:text-neutral-300">
							<div class="flex flex-col md:flex-row w-full md:w-1/2 gap-2">
								<div class="w-full md:w-1/2 pt-0.5"><p>{item.start} - {item.end}</p></div>
								<div class="flex flex-col w-full md:w-1/2 gap-y-1">
									<p class="text-xl leading-1 text-neutral-900 dark:text-neutral-100">{item.employer}</p>
									<p class="font-semibold">{item.position}</p>
								</div>
							</div>
							<div class="flex flex-col w-full md:w-1/2 gap-2 pt-1">
